<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#355796"
    android:elevation="12dp"
    android:id="@+id/constraint_layout">

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="535dp"
        android:id="@+id/v_guideline_1"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="47dp"
        app:layout_constraintGuide_percent="0.10545454" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="535dp"
        android:id="@+id/v_guideline_2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="402dp"
        app:layout_constraintGuide_percent="0.90909094" />

    <android.support.constraint.Guideline
        android:layout_width="442dp"
        android:layout_height="wrap_content"
        android:id="@+id/h_guideline_1"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="57dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.10654206" />

    <android.support.constraint.Guideline
        android:layout_width="442dp"
        android:layout_height="0dp"
        android:id="@+id/h_guideline_2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="162dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.30280373" />

    <android.support.constraint.Guideline
        android:layout_width="442dp"
        android:layout_height="0dp"
        android:id="@+id/h_guideline_3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="218dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.40747663" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/temp_logo"
        android:id="@+id/logo"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2"
        app:layout_constraintLeft_toRightOf="@+id/v_guideline_1"
        app:layout_constraintTop_toBottomOf="@+id/h_guideline_3" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/temp_back"
        android:id="@+id/cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/h_guideline_2"
        android:scaleType="centerCrop" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/emailEditText"
        android:hint="Email or Phone"
        app:layout_constraintTop_toBottomOf="@+id/h_guideline_3"
        app:layout_constraintLeft_toRightOf="@+id/v_guideline_1"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pswEditText"
        app:layout_constraintLeft_toLeftOf="@+id/v_guideline_1"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText"
        android:layout_marginTop="4dp"
        android:hint="password"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <TextView
        android:text="This is a sample text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/langTextView"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/v_guideline_1"
        app:layout_constraintTop_toBottomOf="@+id/h_guideline_2"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Forgot password ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPasswordTextView"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintLeft_toRightOf="@+id/v_guideline_1"
        android:layout_marginTop="4dp" />

    <Button
        android:text="Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2"
        app:layout_constraintTop_toBottomOf="@+id/pswEditText"
        android:background="#4867a0"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@+id/v_guideline_1"
        android:layout_marginTop="4dp"
        android:enabled="false" />

    <Button
        android:text="Create new account !"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/newAccountButton"
        app:layout_constraintLeft_toRightOf="@+id/v_guideline_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2"
        android:background="@drawable/create_acc_button_background"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/temp_logo"
        tools:layout_editor_absoluteY="0dp"
        android:id="@+id/static_image_view"
        app:layout_constraintLeft_toRightOf="@+id/v_guideline_1"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline_2"
        app:layout_constraintTop_toBottomOf="@+id/h_guideline_1" />
</android.support.constraint.ConstraintLayout>