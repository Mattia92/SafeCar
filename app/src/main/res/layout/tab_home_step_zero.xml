<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_home_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/application_back">

    <TextView
        android:fontFamily="@string/font_normal"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/textFontSize"
        android:id="@+id/entry_text_home"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/initPairPlugTA"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/targetPlugLinLay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@string/font_bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/titleFontSize"
            android:id="@+id/current_plug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/helloPlug"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TableLayout
            android:id="@+id/targetPlug"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/row_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1">

                <TextView
                    android:fontFamily="@string/font_bold"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/buttonFontSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.4"
                    android:background="@color/colorPrimary"
                    android:gravity="center"/>

                <TextView
                    android:fontFamily="@string/font_bold"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/buttonFontSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:id="@+id/row_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1">

                <TextView
                    android:fontFamily="@string/font_bold"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.4"
                    android:textSize="@dimen/buttonFontSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center"/>

                <TextView
                    android:fontFamily="@string/font_bold"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/buttonFontSize"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <Button
        android:fontFamily="@string/font_bold"
        android:textColor="@color/colorPrimaryText"
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.2"
        android:textSize="@dimen/buttonFontSize"
        android:background="@color/colorPrimaryDark"
        android:text="@string/initPairPlugB"/>

    <ProgressBar
        android:id="@+id/progressBarHome"
        android:layout_width="30dp"
        android:layout_height="0px"
        android:layout_gravity="center|bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.3" />

</LinearLayout>