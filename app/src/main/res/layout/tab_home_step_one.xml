<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_home_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/entry_text_home"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0.3"
        android:gravity="bottom"
        android:text="We detected your presence in the car.\nAre you actually driving?"
        android:textColor="#000000"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/imageViewsBag"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_below="@+id/entry_text_home"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.7">

        <ImageView
            android:id="@+id/currentlyDrivingLogo"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_done_black_24dp" />

        <ImageView
            android:id="@+id/notCurrentlyDrivingLogo"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_clear_black_24dp" />
    </LinearLayout>

</LinearLayout>