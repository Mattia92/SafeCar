<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_home_two"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/application_back">

    <TextView
        android:layout_width="match_parent"
        android:fontFamily="@string/font_normal"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/titleFontSize"
        android:layout_height="0px"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="2"
        android:gravity="bottom|center"
        android:text="@string/currentlyDriving" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="6"
        android:background="@color/application_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hint_scroll_view_header"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/textFontSize"
            android:fontFamily="@string/font_normal"
            android:orientation="vertical"
            android:text="@string/hints"
            android:backgroundTint="@color/colorPrimary"/>

        <ListView
            android:id="@+id/hint_list_view"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryAlpha"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_below="@+id/entry_text_home"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1.5"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/takeBreak"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/cardview_border"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:id="@+id/pause_resumeTrip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="5"
                android:paddingTop="5dp"
                android:tint="@color/colorPrimaryText"
                android:src="@drawable/ic_pause_black_24dp" />

            <TextView
                android:id="@+id/pause_resumeTripTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/takeBreak"
                android:textSize="@dimen/buttonFontSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/quit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cardview_border"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:id="@+id/stopTrip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:paddingTop="5dp"
                android:tint="@color/colorPrimaryText"
                android:layout_weight="5"
                android:src="@drawable/ic_stop_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/quitTrip"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/buttonFontSize" />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarEndTrip"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="0.5" />

</LinearLayout>