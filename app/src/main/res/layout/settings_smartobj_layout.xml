<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pair plug" />

    <!-- Clickable title -->
    <Button
        android:id="@+id/pairing_speakers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="toggle_content"
        android:text="Identify your plug" />

    <!--content to hide/show -->
    <TextView
        android:id="@+id/pairing_speakers_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testo nascosto per pairing"/>

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Plugs" />

    <!-- Clickable title -->
    <TextView
        android:id="@+id/gestione_plug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Gestione dei plug" />

    <!--content to hide/show -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>